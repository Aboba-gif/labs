// .vscode/tasks.json - практически не меняется
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build All Labs (Debug)", // Просто имя, которое вы видите в меню
            "type": "cmake",                         // Говорит VS Code: "Эту задачу выполняет расширение CMake Tools"
            "command": "build",                      // Конкретная команда для расширения: "Собери проект"
            "preset": "default",                     // Использовать настройки по умолчанию (обычно это Debug-сборка)
            "group": {
                "kind": "build",
                "isDefault": true                    // Эта задача является "сборкой по умолчанию" (запускается по Ctrl+Shift+B)
            }
        }
    ]
}